<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fitness.dao.EquipTypeMapper">

    <sql id="selectField">type_id,type,price,producer,product_number</sql>

    <select id="selectAll" resultType="com.fitness.entity.EquipType">
        select <include refid="selectField"></include> from equip_type
	</select>

    <select id="selectTypeById" resultType="com.fitness.entity.EquipType">
select <include refid="selectField"></include> from equip_type
where type_id=#{id}
    </select>

    <select id="selectTypeByType" resultType="com.fitness.entity.EquipType">
        select <include refid="selectField"></include> from equip_type
        where type=#{type}
    </select>

    <insert id="insertType" parameterType="com.fitness.entity.EquipType">
        insert into equip_type (<include refid="selectField"></include>)
values (#{typeId},#{type},#{price},#{producer},#{productNumber})
    </insert>

    <update id="updateType" parameterType="com.fitness.entity.EquipType">
        update equip_type set type=#{type},price=#{price},producer=#{producer},product_number=#{productNumber}
where id=#{id}
    </update>

    <delete id="deleteType">
        delete from equip_type where id = #{id}
    </delete>
</mapper>